<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1281e2"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_picture"
        android:tint="#000000"
        android:layout_centerInParent="true"
        android:layout_above="@id/txt_walkt_title_1"
        />

    <TextView
        android:id="@+id/txt_walkt_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GALERI"

        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_walkt_title_1"
        android:hint="Kamu Bisa Melihat Foto dan Video Galih"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />


</RelativeLayout>